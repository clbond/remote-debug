{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "inlineSourceMap": true
  },
  "awesomeTypescriptLoaderOptions": {
    "emitRequireType": false,
    "useBabel": true,
    "useCache": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
